# K6 Load Testing Environment Configuration
# Copy this file to .env and update with your actual values

# Target service configuration
TEST_HOST=http://localhost:8080
JWT_TOKEN=eyJhbGciOiJSUzI1NiIsInR5cCI6IkpXVCJ9.your-actual-jwt-token-here

# Test execution parameters
DEFAULT_TEST_TYPE=load
MAX_DURATION=10m
DEFAULT_VUS=10

# Monitoring and alerting  
WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ENABLE_MONITORING=true
MONITORING_INTERVAL=10s

# Performance thresholds (override defaults)
RESPONSE_TIME_THRESHOLD=2000
ERROR_RATE_THRESHOLD=0.05
QUEUE_BACKLOG_THRESHOLD=1000

# Results configuration
RESULTS_RETENTION_DAYS=30
ENABLE_JSON_OUTPUT=true
ENABLE_SUMMARY_EXPORT=true

# Infrastructure monitoring endpoints (optional)
REDIS_HOST=localhost:6379
INFLUXDB_HOST=localhost:8086
GRAFANA_HOST=localhost:3000